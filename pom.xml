		</dependency>
		
		<!-- crawler with html parser --> 
		<dependency>
		    <groupId>net.sourceforge.htmlcleaner</groupId>
		    <artifactId>htmlcleaner</artifactId>
		    <version>2.8</version>
		</dependency>
		
		<!-- file reader with csv --> 
		<dependency>
